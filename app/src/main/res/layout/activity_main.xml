<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <Button
        android:id="@+id/button1"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/verticalGuideLine1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine1"
        app:layout_constraintLeft_toRightOf="@id/verticalGuideLine1"
        app:layout_constraintRight_toLeftOf="@id/verticalGuideLine2"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button3"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine1"
        app:layout_constraintLeft_toRightOf="@id/verticalGuideLine2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/verticalGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine1" />Ì¥

    <Button
        android:id="@+id/button5"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine2"
        app:layout_constraintLeft_toRightOf="@id/verticalGuideLine1"
        app:layout_constraintRight_toLeftOf="@id/verticalGuideLine2"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine1" />


    <Button
        android:id="@+id/button6"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine2"
        app:layout_constraintLeft_toRightOf="@id/verticalGuideLine2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine1" />

    <Button
        android:id="@+id/button7"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/verticalGuideLine1"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine2" />

    <Button
        android:id="@+id/button8"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/verticalGuideLine1"
        app:layout_constraintRight_toLeftOf="@id/verticalGuideLine2"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine2" />


    <Button
        android:id="@+id/button9"
        style="@style/buttonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/verticalGuideLine2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideLine2" />

</androidx.constraintlayout.widget.ConstraintLayout>